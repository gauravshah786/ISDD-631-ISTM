<!doctype html>
<html>
    <head>
        <title>Edit Profile</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <link rel="icon" href="images/favicon.ico" type="image/x-icon">

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300italic,800italic,800,700italic,700,600italic,600,400italic,300%7CRoboto+Condensed:400,400i,700,700i%7CGreat+Vibes" rel="stylesheet">

        <!-- Bootstrap Stylesheet -->
        <link rel="stylesheet" href="css/bootstrap.min.css">

        <!-- Font Awesome Stylesheet -->
        <link rel="stylesheet" href="css/fontawesome-all.min.css">

        <!-- Custom Stylesheets -->
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/orange.css">
        <script src="js/jquery.min.js"></script>
        <script src="https://www.gstatic.com/firebasejs/4.12.1/firebase.js"></script>
        <script src="https://www.gstatic.com/firebasejs/4.12.0/firebase-firestore.js"></script>
        <script src=js/firebase.js></script>
    </head>

    <body class="page-body">

        <!--====== LOADER =====-->
        <div class="loader"></div>

        <!--============== USER-PROFILE-SIDEBAR =============-->
        <%- include partials/profile.ejs %>

        <div class="canvas">

            <div class="overlay-black"></div>

            <!--========= HEADER =========-->
            <%- include partials/header.ejs %>

            <!--=================== PAGE-WRAPPER ================-->
            <section class="page-wrapper innerpage-section-padding">
                <div id="edit-user-page">
                    <div class="container-fluid text-center">
                        <div class="innerpage-heading text-center">
                            <h3>Edit Profile</h3>
                        </div><!-- end innerpage-heading -->

                        <form class="custom-form">
                            <div class="form-profile-img">
                                <img src="<%=data.downloadURL%>"id="edit-usr-img" class="img-responsive img-circle" alt="user-profile" />
                                <input type="file" id="imageFile" required/>
                            </div>

                            <div class="form-group">
                                 <div class="input-group">
                                    <input id="name" type="text" class="form-control" placeholder="Name" value="<%=data.name%>" required/>
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                 </div>
                            </div>

                            <div class="form-group">
                                 <div class="input-group">
                                    <input id="email" type="email" class="form-control" placeholder="Email" value="<%=data.email%>" required/>
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                </div>
                            </div>

                            <div class="form-group">
                                 <div class="input-group">
                                    <input id="phone" type="text" class="form-control" placeholder="Phone Number" value="<%=data.phone%>" required/>
                                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                </div>
                            </div>

                            <button id="update" class="btn btn-orange btn-radius">Update</button>
                        </form>
                    </div><!-- end container-fluid -->
                </div><!-- end edit-user-page -->
            </section><!-- end page-wrapper -->


            <!--=============== FOOTER ===============-->
            <%- include partials/footer.ejs %>

        </div><!-- end canvas -->


   		<!-- Page Scripts Starts -->
        <script src="js/bootstrap.min.js"></script>
        <script src="js/custom-navigation.js"></script>
        <script src="js/edit-profile.js"></script>
      <!-- Page Scripts Ends -->

    </body>
</html>
