<!doctype html>
<html>
    <head>
        <title>Checkout</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <link rel="icon" href="images/favicon.ico" type="image/x-icon">

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300italic,800italic,800,700italic,700,600italic,600,400italic,300%7CRoboto+Condensed:400,400i,700,700i%7CGreat+Vibes" rel="stylesheet">

        <!-- Bootstrap Stylesheet -->
        <link rel="stylesheet" href="css/bootstrap.min.css">

        <!-- Font Awesome Stylesheet -->
        <link rel="stylesheet" href="css/fontawesome-all.min.css">

        <!-- Custom Stylesheets -->
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/orange.css">

        <script src="js/jquery.min.js"></script>
    </head>

    <body class="page-body">

        <!--====== LOADER =====-->
        <div class="loader"></div>

        <!--============== USER-PROFILE-SIDEBAR =============-->
        <%- include partials/profile.ejs %>


        <div class="canvas">
            <div class="overlay-black"></div>

            <!--========= HEADER =========-->
            <div class="header">
                <div class="fixed-header">
                    <div class="container-fluid">
                        <div class="header-logo">
                            <a href="/"><img src='images/trans5_logo.png'></a>
                        </div><!-- end header-logo -->
                        <div class="header-links">
                            <ul class="list-unstyled list-inline">
                                <li class="shopping-cart">
                                  <a href="/shopping-cart" id="shc-side-open">
                                    <span>
                                      <i class="fa fa-shopping-cart"></i>
                                    </span>
                                    <span id="cart-qty" class="cart-badge"><%=data.length%></span>
                                  </a>
                                </li>
                                <li class="user-link"><a href="#" id="usr-side-open"><span><i class="fa fa-user"></i></span></a></li>
                            </ul>
                        </div><!-- end header-links -->
                    </div><!-- end container-fluid -->
                </div><!-- end fixed-header -->
            </div><!-- end header -->
            <script src="js/header.js">
            </script>

            <!--=================== PAGE-WRAPPER ================-->
            <section class="page-wrapper innerpage-section-padding">
                <div id="checkout-page" >
                    <div class="container-fluid">
                        <div class="innerpage-heading cart-text-center">
                            <h3>Order Details</h3>
                        </div><!-- end innerpage-heading -->
                        <div class="innerpage-heading cart-text-center">

                            <p id="order-message1" class="order-item-price" style = "text-align:center;">Thank you for placing the order!</p>

                            <p id="order-message2" class="order-item-price" style = "text-align:center;">Your order will be ready for pickup from :<%%>  by :<%%>. The detailed order is as below:</p>

                        </div>
                        <div class="cart-item col-md-12">
                          <div class="col-md-3">
                          </div>
                          <div class="col-md-6">
                        <div class="order-list">
                            <ul class="list-unstyled">
                              <% var sum=0; %>
                              <% for(var i=0; i<data.length; i++) { %>
                                  <li id="<%= data[i].id %>-li">
                                    <div class="order">
                                        <div class="order-item">
                                            <div class="order-item-info">
                                                <h4><%= data[i].id %></h4>
                                                <p></p>
                                                <p class="order-item-price"><span>Price : <%= data[i].price %></span> , Qty : <%= data[i].qty %></p>
                                            </div><!-- end order-item-info -->

                                            <div class="order-item-img">
                                                <img src="images/<%= data[i].id%>.jpg" class="img-responsive" alt="order-img" style = "border-radius:20px;"/>
                                            </div><!-- end order-img -->
                                        </div><!-- end order-item -->

                                        <div class="total">
                                            <p><%= data[i].qty %> x $<%= data[i].price %> = <span>$<%= data[i].qty * data[i].price %></span></p>
                                        </div><!-- end total -->
                                    </div><!-- end order-->
                                  </li>
                            <% sum = sum + (data[i].qty * data[i].price); %>
                            <% } %>
                            </ul>
                            <div class="cart-info text-center">
                                <h4>Total Price: <span><%= sum%></span></h4>
                            </div><!-- end cart-info -->
                        </div>
                        </div>
                        <div class="col-md-3">
                        </div>
                        </div>
                        <div class = "order-home-link" >
                          <a href="/" class="btn btn-orange" id="confirm-order" style = "text-align:center;">New Order</a>
                        </div>
                    </div><!-- end container-fluid -->
                </div><!-- end checkout-page -->
            </section><!-- end page-wrapper -->


            <!--=============== FOOTER ===============-->
            <%- include partials/footer.ejs %>

        </div><!-- end canvas -->


   		<!-- Page Scripts Starts -->
        <script src="js/bootstrap.min.js"></script>
        <script src="js/custom-navigation.js"></script>
        <!-- Page Scripts Ends -->

    </body>
</html>
