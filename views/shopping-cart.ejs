<!doctype html>
<html>
    <head>
        <title>Shopping Cart</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <link rel="icon" href="images/favicon.ico" type="image/x-icon">

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300italic,800italic,800,700italic,700,600italic,600,400italic,300%7CRoboto+Condensed:400,400i,700,700i%7CGreat+Vibes" rel="stylesheet">

        <!-- Bootstrap Stylesheet -->
        <link rel="stylesheet" href="css/bootstrap.min.css">

        <!-- Font Awesome Stylesheet -->
        <link rel="stylesheet" href="css/fontawesome-all.min.css">

        <!-- Custom Stylesheets -->
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/orange.css">
        <script src="js/jquery.min.js"></script>
        <script src="https://www.gstatic.com/firebasejs/4.12.1/firebase.js"></script>
        <script src="https://www.gstatic.com/firebasejs/4.12.0/firebase-firestore.js"></script>
        <script src=js/firebase.js></script>
    </head>

    <body class="page-body">

        <!--====== LOADER =====-->
        <div class="loader"></div>

        <!--============ SIDE-NAV =============-->
        <div class="sidenav-content">
            <div id="mySidenav" class="sidenav" >
                <div id="web-name">
                    <h2><span>Yummy</span> Days</h2>
                </div><!-- end web-name -->

                <div id="main-menu">
                    <div class="sidenav-closebtn">
                        <button class="btn btn-default" id="sidenav-close">&times;</button>
                    </div><!-- end sidenav-closebtn -->

                    <div class="list-group panel">
                        <a href="/" class="list-group-item"><span><i class="fa fa-lock sidebar-icon"></i></span>Home</a>
                    </div><!-- end list-group -->
                </div><!-- end main-menu -->
            </div><!-- end mySidenav -->
        </div><!-- end sidenav-content -->

        <!--============== USER-PROFILE-SIDEBAR =============-->
        <div id="user-profile-sidebar" class="user-prf-sidebar">
        	<div class="user-prf-sidebar-img text-center">
    			    <div class="overlay">
                  <img src="images/user-profile.jpg" class="img-responsive img-circle" alt="user-profile" />
                  <h3></h3>
              </div><!-- end overlay -->
        	</div><!-- end user-prf-sidebar-img -->

            <div class="user-prf-sidebar-links">
            	<ul class="list-unstyled">
                	<li><a href="user-profile"><span><i class="fa fa-user"></i></span>My Profile</a></li>
                    <li><a href="edit-profile"><span><i class="fa fa-pencil-alt"></i></span>Edit Profile</a></li>
                    <li><a href="#" id="logout"><span><i class="fa fa-sign-out-alt"></i></span>Sign Out</a></li>
                </ul>
            </div><!-- end user-prf-sidebar-links -->
        </div><!-- end user-profile-sidebar -->

        <div class="canvas">
            <div class="overlay-black"></div>

            <!--========= HEADER =========-->
            <%- include partials/header.ejs %>

            <!--=================== PAGE-WRAPPER ================-->
            <section class="page-wrapper innerpage-section-padding">
                <div id="shopping-cart-page" >
                    <div class="container-fluid">
                        <div class="innerpage-heading text-center">
                            <h3 id="cart-message">Your Cart</h3>
                        </div><!-- end innerpage-heading -->

                        <div id="removable">
                          <ul class="list-unstyled cart-list" id="cart-ul-list">
                            <% var sum=0; %>
                            <% for(var i=0; i<data.length; i++) { %>
                                <li id="<%= data[i].id %>-li">
                                  <div class="cart-item">
                                      <div class="item-text dish-list-text">
                                          <h4><%= data[i].id %></h4>
                                          <h5>Qty: <input id="<%= data[i].id %>" type="number" class="form-control" min="1" value=<%= data[i].qty %>> x <span id="<%= data[i].id %>-price"><%= data[i].price %></span></h5>
                                      </div><!-- end item-text -->

                                      <div class="item-img">
                                          <img src="images/<%= data[i].id%>.jpg" class="img-responsive" alt="cart-item-img"/>
                                      </div><!-- end item-img -->

                                      <h4 class="total">Total: $<span id="<%= data[i].id %>-total"><%= data[i].qty * data[i].price %></span></h4>

                                      <div class="item-close">
                                          <button class="btn"><span><i class="fa fa-times-circle remove" id="<%= data[i].id %>-close"></i></span></button>
                                      </div><!-- end item-close -->
                                  </div><!-- end cart-item -->
                                </li>
                                <% sum = sum + (data[i].qty * data[i].price); %>
                            <% } %>
                          </ul>

                          <div class="cart-info text-right">
                              <h4 id="price-total">Total Price: $ <span id="cart-total"><%= sum%></span></h4>
                              <a href="checkout.html" class="btn btn-orange">Checkout</a>
                          </div><!-- end cart-info -->
                        </div>

                    </div><!-- end container-fluid -->
                </div><!-- end shopping-cart-page -->
            </section><!-- end page-wrapper -->


            <!--=============== FOOTER ===============-->
            <%- include partials/footer.ejs %>

        </div><!-- end canvas -->


   		<!-- Page Scripts Starts -->
        <script src="js/bootstrap.min.js"></script>
        <script src="js/custom-navigation.js"></script>
        <script src="js/shopping-cart.js"></script>
        <!-- Page Scripts Ends -->

    </body>
</html>
